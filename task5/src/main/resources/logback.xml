<configuration>
    <appender name="APP" class="ch.qos.logback.core.FileAppender">
        <file>log/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss,SSS} %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="APP" level="info">
        <appender-ref ref="APP" />
    </logger>

</configuration>